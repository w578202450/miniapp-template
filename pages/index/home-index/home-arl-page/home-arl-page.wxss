.main-container {
  position: relative;
  background: #F6F7F3;
  height: 100%;
}
.banner-list{
  padding: 32rpx;
}
.banner-image{
  height: 300rpx;
  width: 100%;
}
.section-container{
  background: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding: 32rpx;
}

.arula-styles{
  display: flex;
  padding-top: 10rpx;
}

.arula-style1{
  color: #FFE4A1;
  font-family: PingFang SC Bold;
}
.arula-style2{
  color: #fff;
  font-size: 22rpx;
  font-family: PingFang SC Bold;
}
.arula-button{
  width: 76rpx;
  height: 76rpx;
  background: linear-gradient(177deg,#ffe4a1 0%, #d8b04f 100%);
  box-shadow: 2px 4px 2px 0px #3955d4; 
  text-align: center;
  border-radius: 50%;
  line-height: 80rpx;
  margin: 0 50rpx 0 30rpx;
  font-size: 28rpx;
}
.image-container{
  height: 160rpx;
  display: flex;
  flex-direction: row;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-image: url('https://com-shuibei-peach-pharmacy.100cbc.com/rp/21030410325655262692822001/21100916335270284440201240.png');
  justify-content: flex-end;
  align-items: center;
}

.arula-list-box{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.arula-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  border-radius: 20rpx;
  margin: 0 13rpx;
}
.arula-box:nth-of-type(1){
  background: #F7E8DC;
}
.arula-box:nth-of-type(2){
  background: #EDF1FA;
}
.arula-box:nth-of-type(3){
  background: #F5E2E2;
}

.arula-box image{
  width: 148rpx;
  height: 148rpx;
}
.arula-box text{
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(0,0,0,0.65);
  padding-bottom: 20rpx;
}

.department-container{
  margin-bottom: 32rpx;
}

.department-title{
  padding: 35rpx 0 20rpx;
  display: inline-block;
  position: relative;
}

.right-bottom {
  margin-top: 16rpx;
  flex-direction: row;
  font-size: 20rpx;
  background: rgba(216, 173, 69, 0.2);
  border-radius: 20rpx;
  display: inline-block;
  padding: 5rpx 20rpx;
  color: #41404B;
}

.right-bottom-item {
  background: rgba(241, 247, 250, 1);
  border-radius: 18rpx;
  font-size: 24rpx;
  color: rgba(142, 148, 157, 1);
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 32rpx;
}

.divider-class {
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.container {
  display: flex;
  flex-direction: row;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.right-box {
  flex-direction: column;
  padding: 32rpx;
  justify-content: space-between;
  flex: 1;
}

.right-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.right-middle {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #41404B;
  line-height: 36rpx;
  display: -webkit-box;
}

.right-bottom {
  margin-top: 16rpx;
  flex-direction: row;
}

.right-bottom-item {
  background: rgba(241, 247, 250, 1);
  border-radius: 18rpx;
  font-size: 24rpx;
  color: rgba(142, 148, 157, 1);
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 32rpx;
}

.name {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(42, 44, 48, 1);
  line-height: 36rpx;
}

.position,
.section {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #41404B;
  line-height: 36rpx;
}

.online-status-box {
  width: 92rpx;
  height: 40rpx;
  border-radius: 40rpx;
  opacity: 0.6;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.border-selected {
  border: 1px solid rgba(67, 139, 239, 1);
}

.border-normal {
  border: 1px solid rgba(142, 148, 157, 1);
}

.dot-view-selected {
  width: 8rpx;
  height: 8rpx;
  background: rgba(0, 233, 107, 1);
  box-shadow: 0px 0px 4px 0px rgba(0, 233, 107, 0.5);
}

.dot-view-normal {
  width: 8rpx;
  height: 8rpx;
  background: rgba(142, 148, 157, 1);
}

.online-status-box text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(67, 139, 239, 1);
}

.online-text-selected {
  color: rgba(67, 139, 239, 1);
}

.online-text-normal {
  color:rgba(142,148,157,1);
}

.divider {
  height: 2rpx;
  background-color: #f6f6ff;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
