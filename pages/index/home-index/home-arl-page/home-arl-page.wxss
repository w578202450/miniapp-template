.show-online{
  border-radius: 30rpx;
  color: #438BEF;
  border: 1px solid #438BEF;
  font-size: 20rpx;
  padding: 0 15rpx 0 25rpx;
  position: relative;
}
.show-online:before{
  content:'';
  display:block;
  width: 8rpx;
  height: 8rpx;
  background: #00e96b;
  border-radius: 50%;
  box-shadow: 0px 0px 8px 0px rgba(0,233,107,0.50);
  position: absolute;
  top: 12rpx;
  left: 10rpx;
}
.show-offline{
  border-radius: 30rpx;
  color: #8E8E93;
  border: 1px solid #8E8E93;
  font-size: 20rpx;
  padding: 0 15rpx 0 25rpx;
  position: relative;
}
.show-offline:before{
  content:'';
  display:block;
  width: 8rpx;
  height: 8rpx;
  background: #8E8E93;
  border-radius: 50%;
  position: absolute;
  top: 12rpx;
  left: 10rpx;
}
