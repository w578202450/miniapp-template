.page {
  background-color: orange;
  margin-bottom: 1rpx;
}

.content {
  background-color: white;
  padding: 32rpx 20rpx 32rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.image-box {
  position: relative;
  width: 160rpx;
  height: 120rpx;
  margin-left: 48rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
}

/* .image-box image {
  
} */

.left-box {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.details {
  margin-top: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(0, 0, 0, 0.65);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-icon {
  position: absolute;
  left: 50rpx;
  top: 30rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 3;
}

.cutting-line {
  height: 1px;
  background: rgba(0, 0, 0, 0.1);
}

.cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
