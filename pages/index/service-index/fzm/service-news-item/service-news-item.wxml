<view>
  <!-- 引入wxs脚本 -->
  <wxs src="../../../../../wxs/wxsCommon.wxs" module="comTools" />
  <view class="content">
    <view class="left-box">
      <text class="title">{{itemData.title}}</text>
      <text class="details">{{itemData.summary}}</text>
      <service-tabs list="{{comTools.strSplit(itemData.tag,',')}}" pageStyle="color: rgba(46, 127, 241, 1); border: 0rpx" tabStyle="margin-top: 16rpx"></service-tabs>
    </view>
    <block wx:if="{{itemData.articleType==0}}">
      <view class="image-box">
        <image mode="aspectFill" class="cover" src="{{itemData.logoUrl || imagePlaceholder}}"></image>
      </view>
    </block>
    <block wx:else>
      <view class="image-box">
        <image class="cover" src="{{itemData.logoUrl || imagePlaceholder}}"></image>
        <image class="video-icon" src="{{videoIconSrc}}"></image>
      </view>
    </block>

  </view>
  <view class="cutting-line"></view>
</view>