

.tabs-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tab {
  display: flex;
  border-radius: 4rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  align-items: center;
  height: 40rpx;
  color: rgba(0, 0, 0, 0.65);
  border: 1px solid rgba(0, 0, 0, 0.25);
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 24rpx;
}