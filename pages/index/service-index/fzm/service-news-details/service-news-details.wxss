@import "../../../../../components/wxParse/wxParse.wxss";

page {
  background-color: white;
  padding-top: 32rpx;
}

.header-box {
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.video-box {
  width: 100%;
  height: 400rpx;
  margin-top: 32rpx;
}

.html-box {
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 32rpx;
}

.button-view-box {
  padding: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.button-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: rgba(67, 139, 239, 0.1);
  border-radius: 10rpx;
  width: 48%;
  height: 56rpx;
}

.button-box image {
  width: 40rpx;
  height: 40rpx;
}

.button-box text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
}

.statistics-box{
  display: flex;
  flex-direction: row;
}