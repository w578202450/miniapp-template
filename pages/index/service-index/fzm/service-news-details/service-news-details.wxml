<import src="../../../../../components/wxParse/wxParse.wxml" />
<!-- 登录弹框 -->
<login-dialog id="loginDialog" bind:error="_error" bind:success="_success" />
<!-- 标题 点赞、观看数-->
<view class="header-box">
  <text class="title">{{articleData.title}}</text>
  <view style="margin-top: 16rpx">
    <!-- 点赞、观看数组件 -->
    <tmc-likeWatchComponent isImageText="{{true}}" likeNum="{{articleData.useful}}" watchNum="{{articleData.viewCount}}"></tmc-likeWatchComponent>
  </view>
</view>
<!-- 视频 -->
<video class="video-box" wx:if="{{articleData.articleType === 1}}" src="{{articleData.articleUrl}}" controls></video>
<!-- 图文 html展示-->
<view class="html-box wxParse" wx:if="{{articleData.articleType === 0}}">
  <template is="wxParse" data="{{wxParseData:article.nodes}}" />
</view>
<!-- 觉得有用 立即问诊-->
<view class="button-view-box">
  <view style="width: 48%">
    <tmc-like keyID="{{keyID}}" disable="{{likeDisable}}" bind:login="login" bind:success="likeSucess"></tmc-like>
  </view>

  <view class="button-box" style="background:rgba(67,139,239,1)" bindtap="toOnlineInqueryFun">
    <image src="{{inquiryIcon}}"></image>
    <text style="color:rgba(255,255,255,1); margin-left: 8rpx">立即问诊</text>
  </view>
</view>
<!-- 评论组件 -->
<tmc-comment id="tmc-comment" keyID="{{keyID}}" commentList="{{commentList}}" bind:login="login"></tmc-comment>