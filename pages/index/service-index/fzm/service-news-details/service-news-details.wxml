<!--pages/index/service-index/fzm/service-news-details/service-news-details.wxml-->
<import src="../../../../../components/wxParse/wxParse.wxml" />
<!-- html -->
<view class="wxParse">
  <template is="wxParse" data="{{wxParseData:article.nodes}}" />
</view>
<!-- button-view -->
<view class="button-view-box">
  <view class="button-box" style="background:rgba(67,139,239,0.1)">
    <image src="{{likeIcon}}"></image>
    <text style="color:rgba(67,139,239,1); margin-left: 8rpx">觉得有用</text>
  </view>
  <view class="button-box" style="background:rgba(67,139,239,1)">
    <image src="{{inquiryIcon}}"></image>
    <text style="color:rgba(255,255,255,1); margin-left: 8rpx">立即问诊</text>
  </view>
</view>
<!-- comment -->
<view class="comment-box">
  <text class="comment-title">留言评论</text>
  <view style="height: 20rpx"></view>
  <view class="comment-item flex_row" wx:for="{{comments}}" wx:key="id" wx:for-item="comment" wx:for-index="comment_index">
    <view class="comment-left flex_row">
      <image src="{{comment.avatar}}"></image>
      <text class="comment_text" style="margin-left: 16rpx">{{comment.name}}</text>
    </view>
    <view class="comment-right">
      <text class="comment_text">{{comment.content}}</text>
      <view class="comment_text" style="margin-top: 16rpx" wx:for="{{comment.replys}}" wx:key="id" wx:for-item="reply" wx:for-index="reply_index">
        <text style="color:rgba(67,139,239,1)">{{reply.name}}回复:</text>
        <text>{{reply.content}}</text>
      </view>
    </view>
  </view>
</view>
<!-- 输入框占位 -->
<view class="bottom-view">
  <view class="input-view">
    <text class="input-placeholder">写评论</text>
  </view>
  <view class="input-button">发布</view>
</view>