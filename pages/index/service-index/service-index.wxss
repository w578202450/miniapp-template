/* pages/index/service-index/service-index.wxss */

.title-box {
  background: rgba(255, 255, 255, 1);
  position: fixed;
  width: 100%;
  z-index: 11;
}

.title-default-box {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-custom-box {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.button-box {
  width: 160rpx;
  height: 48rpx;
  background: rgba(254, 83, 97, 0.99);
  box-shadow: 0px 2rpx 32rpx 0px rgba(0, 0, 0, 0.15);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.button-text {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.banner-box {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.title-name-text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 36rpx;
  flex-shrink: 0;
}

.title-defalut-text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 24rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 16rpx;
}

.cutting-line {
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
  margin-top: 16rpx;
}

.home-icon-box {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  border: 0.25rpx solid #e6e1e1;
}

.home-icon-box image {
  width: 30rpx;
  height: 30rpx;
}

.bottom-box {
  padding: 0 40rpx 36rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.bottom-item-one{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-box text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.15);
  line-height: 24rpx;
}

.topToInquiryFloat {
  position: fixed;
  right: 20rpx;
  bottom: 320rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(270deg,#3B8CED 0%,#5DB4F2 100%);
  box-shadow:0 2px 4px 0 rgba(93,180,242,1);
  -webkit-box-shadow:0 2px 4px 0 rgba(93,180,242,1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}