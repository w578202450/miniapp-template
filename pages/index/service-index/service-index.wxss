/* pages/index/service-index/service-index.wxss */

.title-box {
  background: rgba(255, 255, 255, 1);
  position: fixed;
  width: 100%;
  z-index: 11;
}

.title-default-box {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-custom-box {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.button-box {
  width: 160rpx;
  height: 48rpx;
  background: rgba(254, 83, 97, 0.99);
  box-shadow: 0px 2rpx 32rpx 0px rgba(0, 0, 0, 0.15);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.button-text {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.banner-box {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.title-name-text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 36rpx;
  flex-shrink: 0;
}

.title-defalut-text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 24rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 16rpx;
}

.cutting-line {
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
  margin-top: 16rpx;
}

.home-icon-box {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  border: 0.25rpx solid #e6e1e1;
}

.home-icon-box image {
  width: 30rpx;
  height: 30rpx;
}

.bottom-box {
  padding: 0 40rpx 36rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.bottom-item-one {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-box text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.15);
  line-height: 24rpx;
}

.topToInquiryFloat {
  position: fixed;
  right: 20rpx;
  bottom: 320rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(270deg, #3b8ced 0%, #5db4f2 100%);
  box-shadow: 0 2px 4px 0 rgba(93, 180, 242, 1);
  -webkit-box-shadow: 0 2px 4px 0 rgba(93, 180, 242, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 11;
}

/*模态框*/

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  height: 500rpx;
  background-color: #fff;
}

/*动画前初始位置*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.bottom-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.text-service {
  width: 64rpx;
  height: 32rpx;
  margin-top:20rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(42, 44, 48, 1);
  line-height: 16px;
}

.certification-box {
  margin-top: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.certification-box-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.certification-box-left image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.certification-box-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 15rpx;
}

.certification-box-right image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.certification-box-text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(221, 172, 70, 1);
  line-height: 16px;
  justify-content: center;
}

.cutting-line1 {
  width: 100%;
  height: 2rpx;
  background: rgba(0,0,0,0.1);
  margin-top: 20rpx;
}

.address-tel {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.tel-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.email-box {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.address-tel-header-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.address-tel-header-box image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.emai-left {
  height: 50rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
}

.emai-right {
  height: 50rpx;
  margin-left: 10rpx;
