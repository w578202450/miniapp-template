<!--pages/index/service-index/service-index.wxml-->
<view>
  <!-- 引入wxs脚本 -->
  <wxs src="../../../wxs/wxsCommon.wxs" module="comTools" />
  <!-- 标题 -->
  <view class="title-box">
    <!-- 问诊标题 -->
    <view hidden="{{scrollTop == 0}}" style="height:{{statusBarHeight + navBarHeight + 34}}px">
      <view class="title-custom-box" style="padding-top:{{statusBarHeight}}px;height:{{navBarHeight}}px">
        <text class="title-name-text">{{doctorInfo.doctorName}}</text>
        <text class="title-defalut-text" style="margin-right:{{systemInfo.windowWidth - capsuleRect.left + 10}}px">{{doctorInfo.titleName}} {{comTools.strReplce(doctorInfo.title)}}</text>
      </view>
      <view class="button-box" bindtap="toOnlineInqueryFun">
        <text class="button-text">立即问诊</text>
      </view>
      <view class="cutting-line"></view>
    </view>
    <view hidden="{{scrollTop != 0}}" class="title-default-box" style="padding-top:{{statusBarHeight}}px;height:{{navBarHeight}}px">
      <view class="home-icon-box" style="height: {{capsuleRect.height}}px;width: {{capsuleRect.height}}px" bindtap="goToBackHome">
        <image src="{{ navHomeIconBlack }}"></image>
      </view>
      <text class="title-name-text" style="color:rgba(0,0,0,1)">专家门诊</text>
    </view>
  </view>
  <!-- 专家门诊专家信息 -->
  <service-specialistInfo pageStyle="margin-bottom:20rpx" sectionBanner="{{sectionBanner}}" doctorInfo="{{doctorInfo}}" doctorDisease="{{doctorDisease}}" certifyInfo="{{certifyInfo}}" navTitle="专家门诊" bind:previewDoctorInfo="previewDoctorInfo" bind:toOnlineInqueryFun="toOnlineInqueryFun"
  />
  <!-- 医生团队 -->
  <service-physicianTeam pageStyle="margin-bottom:20rpx" doctorInfo="{{assistantDoctorInfo}}" doctorDisease="{{doctorDisease}}" />
  <!-- 患者评价 -->
  <patient-evaluate wx:if="{{evaluateAllData.doctorID && evaluateAllData.doctorID > 0}}" evaluateAllData="{{evaluateAllData}}" />
  <!-- 医生手记 -->
  <notes paersonInfo="{{inquiryCaseData}}" wx:if="{{inquiryCaseData.keyID}}" httpParams="{{inquiryCaseData.httpParams}}" />
  <!-- 患者分享 -->
  <!-- <share paersonInfo="{{patientShareGetData}}" wx:if="{{patientShareGetData.keyID}}" httpParams="{{patientShareGetData.httpParams}}" /> -->
  <!-- 文章模块 -->
  <service-news pageStyle="margin-top:20rpx;margin-bottom:20rpx" articleTitles="{{articleTitles}}" articleDatas="{{articleDatas}}" currentCategoryData="{{currentCategoryData}}" />
  <!-- 登录弹框 -->
  <login-dialog id="loginDialog" bind:error="_error" bind:success="_success" />
  <view class="bottom-box">
    <view class="bottom-item-one">
      <text>@2015-2020桃子互联网医院</text>
      <image style="width: 24rpx;height: 24rpx;margin-left: 16rpx" src="/images/inquiry/inquiry_nationalEmblem.png"></image>
      <text>蜀ICP备16030538号</text>
    </view>
    <text style="margin-top:20rpx">互联网药品信息服务资格证：（川）-经营性-2017-0003</text>
    <text style="margin-top:20rpx">电信增值业务经营许可证：川B2-20170157</text>
  </view>
</view>