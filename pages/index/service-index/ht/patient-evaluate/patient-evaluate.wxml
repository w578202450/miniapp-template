
<view>
  <!-- 引入wxs脚本 -->
  <wxs src="../../../../../wxs/wxsCommon.wxs" module="comTools" />
  <module-title title="患者评价：" isHaveRemark="{{true}}" remarkInfo="{{(evaluateData.length > 0 && evaluateData[0].keyID) ? '' : ''}}" isHaveMoreBtn="{{evaluateData.length > 0 && evaluateData[0].keyID}}" moreBtnName="查看更多患者评价" httpParams="{{httpParams}}" serve="{{evaluateData.length > 0 ? '100%' : ''}}" effect="{{evaluateData.length > 0 ? '100%' : ''}}">
    <view wx:if="{{evaluateData.length > 0 && evaluateData[0].keyID}}" slot="content-body" class="evaluateContentBox">
    <!-- 擅长列表 -->
      <view  class="levelBox">
        <view class="illnessList">
          <view class="illnessView" wx:for="{{illnessSumList}}" wx:key="index" data-id="{{item.keyID}}">{{item.illnessName}}</view>
        </view>
      </view>
      <!-- 单条评价区 -->
      <view>
        <!-- 灰色间隔区 -->
        <view class="evaluateBox" wx:for="{{evaluateData}}" wx:key="index" wx:for-index='index' wx:for-item='item' data-id="{{item.keyID}}">
          <view class="flexRowBetweenCenter">
            <view class="flexRowStartCenter">
              <image class="patientFace" src="{{item.patientFace}}" mode="widthFix" />
              <text class="patientNameTxt">{{comTools.subName(item.patientName)}}</text>
              <text class="diseaseTxt" style="margin-left: 16rpx">{{item.disease}}</text>
            </view>
            <view class="addTime">{{comTools.dateFormat(item.addTime, 'yyyy-MM-dd')}}</view>
          </view>
          <!-- 评价内容的文字 -->
          <view class="evaluateContent">{{isShowAllContent ? item.content : comTools.subStrTxt(item.content, 48)}}</view>
          <!-- 评价内容的图片或者视频 -->
          <view wx:if="{{isShowAllContent}}" class="materialDataBox">
            <view class="materialItemView {{comTools.isDivisible(indexs+1, 3) ? '': 'materialItemViewMargin'}}" wx:for="{{item.orderCommentMaterial}}" wx:key="indexs" wx:for-index="indexs" wx:for-item="items" bindtap="toDetailFun" data-material="{{items}}" data-index="{{index}}"
              data-indexs="{{indexs}}">
              <image class="materialImg" src="{{items.materialUrl}}" mode="aspectFill" style="background: url({{materialImgBac}});background-size: contain;">
              </image>
              <image wx:if="{{items.materialType == 1}}" class="videoIconImg" src="{{videoIconSrc}}" />
            </view>
          </view>
          <!-- 患者信息条 -->
        </view>
      </view>
    </view>
    <view wx:else slot="content-body">
      <tmc-noData></tmc-noData>
    </view>
  </module-title>
</view>