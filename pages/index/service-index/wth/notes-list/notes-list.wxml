<!--pages/index/service-index/wth/notes-list/notes-list.wxml-->
<!-- 引入wxs脚本 -->
<navigation-bar navbarTitle="医生手记" />
<wxs src="../../../../../wxs/wxsCommon.wxs" module="comTools" />
<!-- 登录弹框 -->
<login-dialog id="loginDialog" bind:error="_error" bind:success="_success" />
<view class="contain-box" bindtap="toDetail" data-detailUrl='{{item.detailUrl}}' wx:for="{{inquiryCaseData}}" wx:key="index">
    <view class="contain-header">
      <view class="contain-header-left">
        <image class="avatar" src="{{item.photoUrl}}"></image>
        <text class="name">{{item.authorName}}</text>
        <text class="address">{{item.patientAddress}}</text>
      </view>
      <view class="contain-header-right data">{{comTools.dateFormat(item.publishDate, 'yyyy-MM-dd')}}</view>
    </view>
    <text class="contain-content content">{{comTools.subStrTxt(item.contentSummary,50)}}</text>
    <view class="contain-line"></view>
  </view>
<!-- 底部问诊按钮 -->
<view class="button-view">
  <tmc-button pageStyle="height:80rpx;margin-left:30rpx;margin-right:30rpx;margin-top:24rpx;margin-bottom:24rpx" bind:buttonTap="goInquiry" title="立即问诊"></tmc-button>
</view>