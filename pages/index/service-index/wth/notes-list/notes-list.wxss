/* pages/index/service-index/wth/notes-list/notes-list.wxss */

.box {
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: RGBA(255, 255, 255, 1);
  padding-top: 10px;
  padding-bottom: 10px;
  margin-bottom: 128rpx;
}

.contain {
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}

.img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.personInfo {
  display: flex;
  align-items: center;
}

.name {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
}

.date {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.45);
}

.content {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 22px;
}

.button-view {
  background: rgba(255, 255, 255, 1);
  position: fixed;
  width: 100%;
  z-index: 1000;
  height: 128rpx;
  bottom: 0rpx;
}