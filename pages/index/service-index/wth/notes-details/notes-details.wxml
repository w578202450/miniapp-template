<import src="../../../../../components/wxParse/wxParse.wxml" />
<wxs src="../../../../../wxs/wxsCommon.wxs" module="comTools" />
<!-- 登录弹框 -->
<login-dialog id="loginDialog" bind:error="_error" bind:success="_success" />
<!-- 点赞、观看数组件 -->
<view class="statistics-box" style="margin-top: 16rpx;margin-left: 32rpx">
  <tmc-statistics type="useful" isShowIcon="{{false}}" id="statistics" queryParams="{{queryStatisticsParamsOfUseful}}"></tmc-statistics>
  <view style="margin-left: 32rpx">
    <tmc-statistics type="view" isShowIcon="{{false}}" queryParams="{{queryStatisticsParamsOfView}}"></tmc-statistics>
  </view>
</view>
<!-- 头像 日期 -->
<view class="contain">
  <view class="personInfo">
    <image class="img" src="{{personInfo.patientFace?personInfo.patientFace:personInfo.photoUrl}}" style="background: url({{materialImgBac}});background-size: contain;"></image>
    <text class="name" style="margin-left: 16rpx">{{personInfo.patientName?comTools.subName(personInfo.patientName):personInfo.authorName}} </text>
    <text class="name" style="margin-left: 16rpx">{{personInfo.patientAddress}}</text>
  </view>
  <view>
    <text class="date">{{comTools.dateFormat(personInfo.publishDate, 'yyyy-MM-dd')}}</text>
  </view>
</view>
<!-- 图文 html展示-->
<view wx:if="{{personInfo.content}}" class="html-box wxParse">
  <template is="wxParse" data="{{wxParseData:inquiryCase.nodes}}" />
</view>
<!-- 觉得有用 立即问诊-->
<view class="button-view-box">
  <view style="width: 48%">
    <tmc-like queryParams="{{queryStatusParamsOfUseful}}" increaseParams="{{increaseParamsOfUserful}}" type="useful" bind:login="login" bind:success="likeSucess"></tmc-like>
  </view>

  <view class="button-box" style="background:rgba(67,139,239,1)" bindtap="toOnlineInqueryFun">
    <image src="{{inquiryIcon}}"></image>
    <text style="color:rgba(255,255,255,1); margin-left: 8rpx">立即问诊</text>
  </view>
</view>
<!-- 评论组件 -->
<tmc-comment id="tmc-comment" queryParams="{{conmmentQueryParams}}" publishParams="{{conmmentPublishParams}}" bind:login="login"></tmc-comment>