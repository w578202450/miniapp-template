  </view>
  <view class="bottom">
    <view class="bottom-doctor-left">
      <text class="bottom-doctor-name">开方医生：李荣豪</text>
      <view class="bottom-seal-box">
        <text class="bottom-doctor-sealname">李荣豪</text>
        <image src="../../../images/profile/profile_doctor_seal.png"></image>
      </view>
    </view>
    <view class="bottom-doctor-right">
      <text class="bottom-doctor-name">审方药师：王一成</text>
      <view class="bottom-seal-box">
        <text class="bottom-doctor-sealname">王一成</text>
        <image src="../../../images/profile/profile_doctor_seal.png"></image>
      </view>
    </view>
  </view>

  <view class="{{payShow ? 'pay-show' : ''}}">
    <view class="pay-left">
      <image src="../../../images/profile/profile_company_seal.png"></image>
      <text>咨询医生</text>
    </view>
    <button>立即支付（实付：¥120）</button>
  </view>
</view>