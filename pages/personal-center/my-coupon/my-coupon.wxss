/* pages/personal-center/my-coupon/my-coupon.wxss */
@import "../../../common/common.wxss";
@import "../../../template/template.wxss";

.my-coupon{
  overflow: hidden;
  height: 100%;
}

.cell{
  margin-top: 30rpx;
  min-height: 264rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  background-color: #fff;
  display: flex;
}
.cell-lf{
  flex: 1;
  padding: 32rpx;
}
.coupon-title{
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
.coupon-title .name{
  font-size: 28rpx;
  max-width: 300rpx;
  color: #000000;
}
.coupon-title .effect{
  width:120rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #1890FF;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  border:2rpx solid rgba(24,144,255,1);
  font-size: 24rpx;
  margin-left: 32rpx;
}
.coupon-detail{
  min-height: 50rpx;
  font-size: 24rpx;
  color: #595959;
}
.coupon-time{
  font-size:24rpx;
  color:rgba(0,0,0,0.45);
  line-height:24px;
}
.cell-rg{
  min-height: 264rpx;
  width:160rpx;
  background:rgba(24,144,255,1);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.my-coupon .empty{
   text-align: center;
   margin-top: 50%;
   transform: translateY(50%);
}