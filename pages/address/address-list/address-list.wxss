@import "../../../common/common.wxss";

.cell{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 32rpx;
  border-radius:20rpx;
}

.info-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  
}

.info-box .name,.phone{
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,0.85);
  line-height:28rpx;
}

.info-box .phone{
  margin-left: 16rpx;
}

.info-box .selectedBtn{
  width:86rpx;
  height:36rpx;
  background-color:rgba(67,139,239,1);
  border-radius:22rpx;
  margin-left: 32rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.address{
  margin-top: 32rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.65);
  line-height:24rpx;
}

.bottom-left{
  width: 96rpx;
}

.separator{
  margin-top: 32rpx;
  height:2rpx;
  background:rgba(238,238,238,1);
}

.bottom-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 32rpx;
  margin-top: 32rpx;

}

.bottom-left{
  display: flex;
  flex-direction: row;
  width: 25%;
  align-items: center;
}

.bottom-right{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ImageTitle-edit,.ImageTitle-delete{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ImageTitle-edit{
  margin-right: 32rpx;
}

.ImageTitle-image{
  width: 32rpx;
  height: 32rpx;
}

.ImageTitle-title{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.65);
  line-height:24rpx;
  margin-left: 16rpx;
}

.btnView{
  width: 100%;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
}

.btnView button{
  height:80rpx;
  background:linear-gradient(270deg,rgba(59,140,237,1) 0%,rgba(93,180,242,1) 100%);
  font-size:32rpx;
  font-family:PpackageingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  width: 80%;
  border-radius:80rpx;
  border-style: solid;
  border-width: 0rpx;
  box-shadow:0px 2px 4px 0px rgba(93,180,242,1);
  -webkit-box-shadow:0px 2px 4px 0px rgba(93,180,242,1);
}

.tempView{
  width: 100%;
  height: 116rpx;
}
