<view class="page">
  <view wx:for="{{list}}" wx:for-item="item">
    <view class="cell">
      <view class="info-box">
        <text class="name">{{item.name}}</text>
        <text class="phone">{{item.phone}}</text>
        <view class="selectedBtn">默认</view>
      </view>
      <text class="address">{{item.address}}</text>
      <view class="separator"></view>
      <view class="bottom-box">
        <view class="bottom-left">
          <image class="ImageTitle-image" src="{{item.selected ? '../../../images/public/public_circle_selected.png' : '../../../images/public/public_circle_normal.png'}}"></image>
          <text class="ImageTitle-title">默认地址</text>
        </view>
        <view class="bottom-right">
          <view class="ImageTitle-edit">
            <image class="ImageTitle-image" src="../../../images/public/public_edit.png"></image>
            <text class="ImageTitle-title">编辑</text>
          </view>
          <view class="ImageTitle-delete">
            <image class="ImageTitle-image" src="../../../images/public/public_delete.png"></image>
            <text class="ImageTitle-title">删除</text>
          </view>
        </view>
        
      </view>
      
    </view>
  </view>
  <view class="btnView">
    <button bindtap="addAction">+ 新增地址</button>
  </view>
  
</view>