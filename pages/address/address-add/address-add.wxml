<view class="page">
  <view class="address">
    <view class="cell">
      <text class="cell-title">收货人</text>
      <input class="weui-input cell-detail" placeholder="请填写收货人姓名"/>
        <!-- <view class="weui-cell__bd">王重阳</view> -->
    </view>
    <view class="cell-separator"></view>
    <view class="cell">
      <text class="cell-title">手机号码</text>
      <input class="weui-input cell-detail" type="number" placeholder="请填写11位手机号码"/>
    </view>
    <view class="cell-separator"></view>
    <view class="address-seleceted">
      <text class="cell-title">所在地区</text>
      <text class="cell-detail">中国</text>
      <image src="../../../images/public/public_right.png"></image>
    </view>
  </view>
  <view class="cell-separator"></view>
  <view class="address-detail">
  <textarea  placeholder="请填写街道、楼牌号等" style="height: 3.3em"></textarea>
  </view>
  <view class="delete">删除地址</view>
  <view class="btnView">
    <button class="button-theme" style="width: 80%;" bindtap="addAction">保存</button>
  </view>
</view>