/* pages/order/order-success/order-success.wxss */

page {
  background-color: #fff;
}

.paySuccessIconBox {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.paySuccessIcon {
  width: 300rpx;
  height: 300rpx;
}

.successInfoBox {
  width: 100%;
  height: 600rpx;
  text-align: center;
  margin-top: 60rpx;
}

.title {
  margin: 40rpx 0;
  color: #242526;
  font-weight: bold;
}

.titleTxt {
  color: #555658;
  font-size: 28rpx;
}

.sucBtnBox {
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.sucBtnBac {
  width: 240rpx;
  padding: 10rpx 0;
  border: 1rpx solid #438bef;
  background-color: #fff;
  border-radius: 62rpx;
  color: #438bef;
  font-weight: normal;
}

.sucBtnEva {
  width: 240rpx;
  padding: 10rpx 0;
  border-radius: 62rpx;
  background-color: #438bef;
  color: #fff;
  font-weight: normal;
}
