/**index.wxss**/

page {
  background-color: white;
}

.header {
  position: relative;
  width: 100%;
  background: #629ff4;
  opacity: 0.9;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: -1;
}

.header-one {
  display: flex;
  align-items: center;
  margin-left: 36rpx;
  width: 100%;
}

.header-two {
  padding-left: 36rpx;
  padding-right: 116rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.header-two .header-info {
  display: flex;
  flex-direction: column;
  line-height: 2em;
  margin-right: 32rpx;
}

.header-two image {
  height: 188rpx;
  width: 184rpx;
  flex-shrink: 0;
}

.header-info .hospital_name {
  height: 36rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
}

.header-info .room_name {
  margin-top: 55rpx;
  height: 36rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
}

.header-info .room_des {
  height: 28rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
  margin-top: 20rpx;
}

.middle-one {
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: -20rpx;
}

.middleOne-box {
  width: 48%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.middleOne-box image {
  height: 85rpx;
  width: 80rpx;
}

.middleOne-box .info-box {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.middleOne-box .info-box .info_one {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 32rpx;
}

.middleOne-box .info-box .info_two {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 28rpx;
}

.middle-one .lineView {
  width: 2rpx;
  height: 92rpx;
  background: rgba(232, 232, 232, 1);
  border-radius: 10rpx;
}

.middle-two {
  margin-top: 48rpx;
  display: flex;
  height: 28rpx;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  width: 100%;
}

.titleLabel {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
}

.detailLabel {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(199, 131, 48, 1);
  line-height: 28rpx;
}

.middle-three {
  margin-top: 36rpx;
  display: flex;
  height: 28rpx;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  width: 100%;
}

.middle-four {
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 1);
  box-shadow:0px 1px 4px 0px rgba(0,0,0,0.1);
  border-radius: 10rpx;
  padding: 30rpx 32rpx 36rpx 32rpx;
  width: 100%;
}

.middle-four .doctor-card {
  width: 45%;
  background-color: white;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.doctor-card .doctor_avatar {
  width: 124rpx;
  height: 124rpx;
  border-radius: 80rpx;
}

.doctor-card .authenticated_icon {
  margin-top: -16rpx;
  width: 96rpx;
  height: 32rpx;
}

.doctor-card .cardInfo_one {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.doctorname {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
}

.position {
  margin-left: 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  text-align: center;
  flex-shrink: 0;
  width: 96rpx;
}

.doctor-card .cardInfo_two {
  margin-top: 5rpx;
  display: flex;
  flex-direction: column;
}

.hospital {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 36rpx;
  text-align: center;
}

.department {
  margin-top: 32rpx;
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.45);
  line-height: 36rpx;
}

.expertise {
  margin-top: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.45);
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  align-content: center;
}

.inquiry-view {
  width: 100%;
  margin-top: 32rpx;
  margin-bottom: 58rpx;
}

.inquiry-view image {
  width: 100%;
}
