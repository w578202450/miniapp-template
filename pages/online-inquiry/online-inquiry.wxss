  z-index: -1;
}

.header .header-info {
  margin-left: 36rpx;
  margin-bottom: 68rpx;
  display: flex;
  flex-direction: column;
  line-height: 2em;
}

.header image {
  height: 188rpx;
  width: 184rpx;
  margin-right: 116rpx;
