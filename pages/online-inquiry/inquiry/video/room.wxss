@import "../iview/icon/index.wxss";

.container-box {
  background-image: url(https://mc.qcloudimg.com/static/img/7da57e0050d308e2e1b1e31afbc42929/bg.png);
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vh;
  height: 100vh;
  overflow: hidden;
}

.camera-box {
  width: 100vw;
  height: 100%;
}


.room-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
}

/* 上层 */
.img-box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

/* 医生头像 */
.img-head {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  position: absolute;
  left: calc(50% - 80rpx);
  top: 20%;
  background-color: #999;
}

/* 挂断按钮 */
.img-view {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left: calc(50% - 60rpx);
  bottom: 20%;
}