@import "../iview/icon/index.wxss";

.container-box {
  background-image: url(https://mc.qcloudimg.com/static/img/7da57e0050d308e2e1b1e31afbc42929/bg.png);
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vh;
  height: 100vh;
  overflow: hidden;
}

.camera-box {
  width: 100vw;
  height: 100%;
}


.room-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
}

/* 上层 */
.img-box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

/* 医生信息盒子 */
.docInfoBox {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: calc(50% - 200rpx);
  top: 20%;
  /* background: red; */
}

/* 医生头像 */
.img-head {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: rgb(230, 230, 230);
  margin-bottom: 15rpx;
}

/* 呼叫中 */
.callDocTitle {
  color: #fff;
  font-size: 40rpx;
}

/* 挂断 */
.endCallBox {
  width: 130rpx;
  text-align: center;
  position: absolute;
  left: calc(50% - 65rpx);
  bottom: 15%;
}

/* 挂断按钮图标 */
.img-view {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
}

/* 挂断按钮文字 */
.endCallTxt {
  color: #C8C8C8;
  font-size: 30rpx;
}