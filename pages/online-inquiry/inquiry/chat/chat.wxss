.flexRowStartCenter {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.middle-one{
  height:140rpx;
  background:#fff;
  box-shadow:0 0 8rpx 0 rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100
}

.middleOne-box{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 20rpx;
  /* border: 1px solid red; */
}

.middleOne-box-one {
  border-right: 1rpx solid #DBDEE3;
}

.middleOne-box image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 80rpx;
  background-color: rgb(248,248,248);
}

.middleOne-box .info-box{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.middleOne-box .info-box .info_one{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,0.85);
  line-height:32rpx;
}
.middleOne-box .info-box .info_one_one {
  margin-left: 10rpx;
  border-radius: 30rpx;
  border: 1px solid #438BEF;
  padding: 0 15rpx;
  font-size: 28rpx;
  color: #438BEF;
}

.middleOne-box .info-box .info_two{
  margin-top: 16rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.65);
  line-height:28rpx;
}

.middle-one .lineView{
  width:1rpx;
  height:80rpx;
  background:rgba(232,232,232,1);
}

/*聊天记录*/
.message-list {
  background-color: #F6F6F6;
}

/*单元行*/
.row {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}

/*日期*/
.datetime {
  font-size: 28rpx;
  padding: 20rpx 0 0 0;
  color: #999;
  text-align: center;
}

/*主体*/
.body {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  margin-top: 10px;
}


/*头像容器*/
.body.avatar-container {
  width: 20%;
}

/*头像*/
.body .avatarOne {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 20rpx;
}

.body .avatarTwo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-left: 20rpx;
}

/*人名*/
.personNameTxt {
  font-size: 30rpx;
  color: #86888B;
}

/*文本消息*/
.body .content {
  font-size: 32rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 15rpx;
  /* line-height: 22rpx; */
  margin-bottom: 20rpx;
}

/* 三角箭头 */
.body .triangle {
  background: white;
  width: 20rpx;
  height: 20rpx;
  margin-top: 26rpx;
  transform: rotate(45deg);
  position: absolute;
}

/*图片消息*/
.picture {

}

/*回复框*/
.reply {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  background: #fff;
}

/*文本输入或语音录入*/
.reply .opration-area {
  margin: 0 0 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

/*语音图标*/
.reply .opration-area .voiceIcon {
  width: 55rpx;
  height: 55rpx;
}

/*回复文本框*/
.reply .opration-area .msgInput {
  margin: 20rpx 20rpx;
  width: 445rpx;
  padding: 0rpx 25rpx 0 15rpx !important;
  border: none;
  border-radius: 6px;
  height: 75rpx;
  background: #F6F6F6;
}

/*恢复文本框图标*/
.reply .opration-area .inputIcon {
  width: 55rpx;
  height: 55rpx;
}

/*发送*/
.reply .send {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  font-size: 34rpx;
  color: #999;
  text-align: center;
}

/*菜单按钮*/
.reply .menusIcon {
 width: 55rpx;
 height: 55rpx;
}

/*选取图片*/
.reply .choose-image {
  width: 25px;
  height: 25px;
  margin-right: 3%;
}

/*按住说话button*/
.voice-button {
  height: 36px;
  color: #818181;
  font-size: 14px;
  line-height: 36px;
}

/*悬浮提示框*/
.hud-container {
  position: fixed;
  width: 150px;
  height: 150px;
  left: 50%;
  top: 50%;
  margin-left: -75px;
  margin-top: -75px;
}

/*背景层*/
.hud-background {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #999;
  opacity: .8;
  z-index: 11;
  border-radius: 10px;
}

/*悬浮框主体*/
.hud-body {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 19;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

/*图标*/
.hud-body image {
  margin-top: 20px;
  width: 80px;
  height: 80px;
}

/*文字*/
.hud-body .tip {
  color: #fff;
  text-align: center;
  width: 90%;
  line-height: 34px;
  margin: 0 auto;
  margin-bottom: 10px;
  width: 90%;
}

.hud-body .warning {
  background: #cc3333;
  border-radius: 5px;
}




