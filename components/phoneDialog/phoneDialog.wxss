.loginDialogBox {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  z-index: 100;
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-popup-image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 32rpx;
}

.separator {
  height: 2rpx;
  background: rgba(238, 238, 238, 1);
}

.wx-popup-title {
  width: 100%;
  padding: 40rpx 0 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(42, 44, 48, 1);
  line-height: 44rpx;
}

.wx-popup-content {
  color: #555658;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.contentTxt {
  width: 168rpx;
  height: 40rpx;
  margin-top: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(42, 44, 48, 1);
  line-height: 40rpx;
  text-align: center;
}

.separator-bottom {
  height: 2rpx;
  margin-top: 26rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background: rgba(238, 238, 238, 1);
}

.hint-text {
  height: 34rpx;
  margin-top: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(142, 148, 157, 1);
  line-height: 34rpx;
  text-align: center;
}

.wx-popup-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  margin-top: 40rpx;
  align-items: center;
  /* margin: auto; */
}

.wx-popup-btn .btn-no {
  width: 50%;
  color: #666;
  text-align: center;
  font-size: 34rpx;
  border-top: 2rpx solid rgba(238, 238, 238, 1);
  border-right: 2rpx solid rgba(238, 238, 238, 1);
  background-color: transparent;
}

.wx-popup-btn .btn-ok {
  width: 50%;
  color: rgba(18, 197, 104, 1);
  text-align: center;
  font-size: 34rpx;
  border-top: 2rpx solid rgba(238, 238, 238, 1);
  background-color: transparent;
}

.btn-no::after {
  border: none;
}

.btn-ok::after {
  border: none;
}

.tip-box {
  border-top: 1px solid #dbdee3;
  margin-top: 50rpx;
  padding: 20rpx 20rpx;
  text-align: center;
}

.tip-box .tip-txt {
  font-size: 24rpx;
  color: #86888b;
}
