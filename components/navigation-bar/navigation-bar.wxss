/* components/navigation-bar/navigation-bar.wxss */

.navbarBox {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 10;
  text-align: center;
}

.navbarTitleBox {
  position: absolute;
  left: 0;
  width: 100%;
}

.navbarTitleTxt {
  width: 100%;
  font-size: 32rpx;
  text-align: center;
}

.navbarBtn {
  position: absolute;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.navBackIcon {
  width: 35rpx;
  height: 35rpx;
  cursor: pointer;
}

.linear {
  height: 35rpx;
  width: 2rpx;
  margin: 0 20rpx;
}

.navHomeIcon {
  width: 35rpx;
  height: 35rpx;
  cursor: pointer;
}