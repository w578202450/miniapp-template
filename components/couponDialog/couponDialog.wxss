/* components/couponDialog/couponDialog.wxss */

.coupon-dialog{
  height: 100%;
  width: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.4);
}
.coupon-dialog .content{
  width:592rpx;
  min-height:600rpx;
  padding:76rpx 44rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.coupon-dialog .content .title{
  line-height:44rpx;
  color:rgba(63,175,163,1);
  font-size: 32rpx;
  text-align: center;
  padding-bottom: 28rpx;
}
.coupon-dialog .content .des{
  line-height:22rpx;
  font-size: 26rpx;
  line-height:44rpx;
  color:rgba(0,0,0,0.65);
  padding: 0 20rpx;
}
.coupon-dialog .content .rule{
  font-size: 26rpx;
  line-height:44rpx;
  color:rgba(247,167,81,0.65);
  padding-bottom: 28rpx;
}
.coupon-img{
  width:432rpx;
  height:256rpx;
  border: 2rpx dashed rgba(0,0,0,0.55);
  margin: 32rpx auto 16rpx;
  box-sizing: border-box;
  position: relative;
}
.counpon-text{
  position: absolute;
  top: 88rpx;
  left: 0;
  width: 100%;
  text-align: center;
  color: #fff;
}
.coupon-img image{
  width: 416rpx;
  height: 240rpx;
  display: block;
  margin: 8px auto 0;
}
.coupon-btn{
  height: 72rpx;
  display: flex;
  justify-content: space-between;
}
.coupon-btn button{
  width:216rpx;
  height:72rpx;
  border-radius:40rpx;
  font-size:32rpx;
  font-weight:400;
  text-align: center;
  line-height: 72rpx;
  outline: none;
  box-sizing: border-box;
}
.coupon-btn button:nth-child(1){
  border:2rpx solid rgba(61,173,161,1);
  background: #fff;
  color:rgba(61,173,161,1);
}
.coupon-btn button:nth-child(2){
  background:rgba(61,173,161,1);
  color: #fff;
}