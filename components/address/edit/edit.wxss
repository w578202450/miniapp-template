/* components/address/edit/edit.wxss */
@import "../../../common/common.wxss";


.address-edit {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
}

.mask {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.4);
}
.close{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: rgba(0,0,0,0.45);
  background: #f6f6f6;
  border-radius: 24rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
  font-size: 40rpx;
  transform: rotate(45deg);
}
.edit-box {
  height: 634rpx;
  overflow: hidden;
  width: 100%;
  background: #fff;
  z-index: 100;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.edit-box .title {
  height: 116rpx;
  line-height: 116rpx;
  font-size: 32rpx;
  color: #111111;
  border-bottom: 2rpx solid #eeeeee;
  text-align: center;
  font-weight: 600;
  position: relative;
}

.cell {
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 150rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eeeeee;
  padding: 32rpx 0;
}

.info-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.info-box .radus {
  height: 32rpx;
  width: 32rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 2rpx solid #979797;
  box-shadow: 0px 1px 2px 0px rgba(151, 151, 151, 0.4);
  position: relative;

}

.info-box .radus.selectRadus {
  border: 2rpx solid #387fe2;
  box-shadow: 0px 1px 2px 0px rgba(151, 151, 151, 0.4);
}
.info-box .radus.selectRadus:after{
  content: '';
  position: absolute;
  display: block;
  height: 16rpx;
  width: 16rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: #387fe2;
  border-radius: 50%;
}
.info-box .name,
.phone {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
}

.info-box .name {
  margin-left: 32rpx;
}

.info-box .phone {
  margin-left: 16rpx;
}

.info-box .selectedBtn {
  width: 86rpx;
  height: 36rpx;
  background-color: rgba(67, 139, 239, 1);
  border-radius: 22rpx;
  margin-left: 32rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.address {
  margin-top: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 24rpx;
  padding-left: 64rpx;
}

.bottom-left {
  width: 96rpx;
}

.separator {
  margin-top: 32rpx;
  height: 2rpx;
  background: rgba(238, 238, 238, 1);
}

.bottom-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 32rpx;
  margin-top: 32rpx;

}

.bottom-left {
  display: flex;
  flex-direction: row;
  width: 25%;
  align-items: center;
}

.bottom-right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ImageTitle-edit,
.ImageTitle-delete {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ImageTitle-edit {
  margin-right: 32rpx;
}

.ImageTitle-image {
  width: 32rpx;
  height: 32rpx;
}

.ImageTitle-title {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.65);
  line-height: 24rpx;
  margin-left: 16rpx;
}

.btnView {
  width: 100%;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
}

.btnView button {
  height: 80rpx;
  background: linear-gradient(270deg, rgba(59, 140, 237, 1) 0%, rgba(93, 180, 242, 1) 100%);
  font-size: 32rpx;
  font-family: PpackageingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  width: 80%;
  border-radius: 80rpx;
  border-style: solid;
  border-width: 0rpx;
  box-shadow: 0px 2px 4px 0px rgba(93, 180, 242, 1);
  -webkit-box-shadow: 0px 2px 4px 0px rgba(93, 180, 242, 1);
}

.tempView {
  width: 100%;
  height: 116rpx;
}

.button-background {}

.scroll-box {
  height: 300rpx;
  box-sizing: border-box;
  overflow: auto;
}

.confirm-btn {
  width: 690rpx;
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  font-size: 32rpx;
  transform: translateX(-50%);
  z-index: 120;
  background: #438bef;
  border-radius: 25px;
  box-shadow: 0px 3px 8px 0px rgba(67, 139, 239, 0.4);
}