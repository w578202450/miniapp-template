/* components/address/add/add.wxss */
@import "../../../common/common.wxss";

.page{
  height: 100%;
  width: 100%;
}
.address{
  margin-top: 20rpx;
  background-color: white;
}

.cell{
  padding: 32rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-title{
  width: 112rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.85);
  line-height:28rpx;
  flex-shrink: 0;
  flex-grow: 0;
}
.cell-detail{
  margin-left: 66rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.85);
  line-height:28rpx;
  flex-grow: 1;
}

.address-selected-details{
  margin-left: 62rpx;
}

.address-seleceted image{
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.address-seleceted{
  margin-right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  padding-left: 0;
}

.cell-separator{
  /* margin-left: 32rpx; */
  height:2rpx;
  background:rgba(238,238,238,1);
}

.delete{
  margin-top: 32rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding: 32rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(254,88,83,1);
  line-height:28rpx;
  text-align: center;
}
.close{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: rgba(0,0,0,0.45);
  background: #f6f6f6;
  border-radius: 24rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
  font-size: 40rpx;
  transform: rotate(45deg);
}
.address-detail{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.85);
  line-height:28rpx;
  padding: 36rpx;
  padding-left: 0;
  background-color: white;
}

.btnView{
  position: absolute;
  width: 100%;
  bottom: 36rpx;
}

picker{
  width: 100%
}

.address-add{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 110;
}
.address-add .address{
   height: 800rpx;
   box-sizing: border-box;
   width: 100%;
   overflow: auto;
   position: absolute;
   bottom: 0;
   left: 0;
   z-index: 110;
   background: #fff;
   border-radius: 10px 10px 0 0;
   box-sizing: border-box;
   padding: 0 30rpx;
}
.mask {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.4);
}
.address .title {
  height: 116rpx;
  line-height: 116rpx;
  font-size: 32rpx;
  color: #111111;
  border-bottom: 2rpx solid #eeeeee;
  text-align: center;
  font-weight: 600;
  position: relative;
}

.confirm-btn {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  font-size: 32rpx;
  transform: translateX(-50%);
  z-index: 120;
  background: #438bef;
  color: #fff;
  border-radius: 25px;
  box-shadow: 0px 3px 8px 0px rgba(67, 139, 239, 0.4);
}