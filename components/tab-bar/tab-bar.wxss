/* components/tab-bar/tab-bar.wxss */

.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 120rpx;
}

.tabbar_nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 100%;
  width: 60%;
  margin: auto;
}

.tabbar_icon {
  width: 50rpx;
  height: 50rpx;
}

.tabbar_icon_box {
  position: absolute;
  top: -22rpx;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 50%;
}

.tabbar_icon_img {
  width: 80rpx;
  height: 80rpx;
}
